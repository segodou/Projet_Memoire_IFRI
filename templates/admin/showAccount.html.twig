{% extends 'gent.html.twig' %}

{% block title 'Profil Admin' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto text-center">
            <h1 class="my-5">Profil</h1>

            <img src="{{ app.user.gravatarUrl}}" alt="Avatar de {{app.user.fullName}}" class="shadow rounded-circle">

            <p class="lead mt-5">{{ app.user.email }}</p>

            <h2>{{ app.user.fullName}}</h2>

            <p><small>Compte créé le {{ app.user.createdAt|date('d/m/Y') }}</small></p>

            <p>
                <a href="{{ path('app_admin_account_edit') }}">Editer profil</a> | 
                <a href="{{ path('app_admin_account_change_password') }}">Changer mot de passe </a>
            </p>    
        </div>
    </div>

{% endblock %}
